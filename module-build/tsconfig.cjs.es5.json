{
  "compilerOptions": {
    "module": "CommonJS",
    "strictNullChecks": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": false,
    "declaration": true,
    "target": "ES5",
    "noImplicitAny": true,
    "sourceMap": false,
    "types": [],
    /* to prevent inclusion of node types etc, amongst others - sub modules need to specify types they require */
    "lib": [
      "ES2017",
      "dom"
    ]
  }
}

